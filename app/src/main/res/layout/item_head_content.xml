<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.tsrj.qiezi.view.widget.dialog.CircleImageView
        android:src="@drawable/bg"
        android:layout_marginTop="@dimen/dip20"
        android:id="@+id/head_image"
        android:layout_marginRight="@dimen/dip10"
        android:layout_width="60dp"
        android:layout_height="60dp" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:gravity="center"
            android:text="78部"
            android:textAppearance="@style/TextStyleBlack12sp"
            android:layout_alignParentRight="true"
            android:id="@+id/movie_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_nickname"
            android:layout_marginTop="20dp"
            android:textAppearance="@style/TextStyleBlack16sp"
            android:text="剥夺也极易"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginTop="10dp"
            android:text="dhjfahjhfjhfjahdjfh"
            android:layout_below="@+id/tv_nickname"
            android:textAppearance="@style/TextStyleGray12sp"
            android:id="@+id/tv_description"
            android:maxLines="2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>
</LinearLayout>